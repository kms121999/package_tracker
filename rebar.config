{erl_opts, [debug_info]}.
{deps, [
    {jiffy, "1.1.2"},
    {cowboy, "2.9.0"},
    {meck, "0.9.2"},
    {uuid, {git, "https://github.com/okeuday/uuid", {tag, "v2.0.7"}}},
    {riakc, {git, "https://github.com/basho/riak-erlang-client", {tag, "3.0.13"}}}
]}.

{relx, [{release, {all, "0.1.0"},
         [sasl,
          database_client,
          truck_update,
          package_get,
          package_update,
          lumberjack,
          package_tracker
          ]},
          
        {release, {frontend, "0.1.0"},
         [sasl,
          {database_client, load},
          {truck_update, load},
          {package_get, load},
          {package_update, load},
          {lumberjack, load},
          package_tracker
          ]},

        {release, {backend, "0.1.0"},
         [sasl,
          package_get,
          truck_update,
          package_update,
          lumberjack,
          database_client,
          {cowboy, load},
          {jiffy, load}
          ]},

        {release, {database, "0.1.0"},
         [sasl,
          {lumberjack, load},
          database_client
          ]},

        {lib_dirs, ["apps"]},
        {mode, dev},
        {extended_start_script, true},

        %% automatically picked up if the files
        %% exist but can be set manually, which
        %% is required if the names aren't exactly
        %% sys.config and vm.args
        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"}

        %% the .src form of the configuration files do
        %% not require setting RELX_REPLACE_OS_VARS
        %% {sys_config_src, "./config/sys.config.src"},
        %% {vm_args_src, "./config/vm.args.src"}
]}.

{profiles, [{prod, [{relx,
                     [%% prod is the default mode when prod
                      %% profile is used, so does not have
                      %% to be explicitly included like this
                      {mode, prod}

                      %% use minimal mode to exclude ERTS
                      %% {mode, minimal}
                     ]
            }]}]}.
